<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buyDetail"
    android:background="@color/main_black">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:paddingBottom="10dp"
        android:layout_marginHorizontal="30dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUMMARY"
            android:textSize="32dp"
            android:textColor="@color/main_white"
            android:fontFamily="sans-serif-black"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="30dp"
                android:layout_marginHorizontal="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="30dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgs"
                            android:layout_width="120dp"
                            android:layout_height="170dp"
                            android:layout_marginTop="40dp"/>

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/JUDUL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="JUDUL_FILM"
                                android:fontFamily="sans-serif-black"
                                android:textSize="18dp"
                                android:textColor="@color/main_black"/>

                            <TextView
                                android:id="@+id/BIOSKOP"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="XXI PAKUWON MALL"
                                android:fontFamily="sans-serif"
                                android:textSize="12dp"
                                android:textColor="@color/main_black"/>

                            <TextView
                                android:id="@+id/tanggal_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="22/Juli/2004"
                                android:fontFamily="sans-serif"
                                android:textSize="16dp"
                                android:textColor="@color/main_black"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Order number"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif"
                        android:textSize="18dp"
                        android:textColor="@color/main_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0988727181831"
                        android:textSize="24dp"
                        android:textColor="@color/main_black"
                        android:fontFamily="sans-serif-medium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Jenis seats"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif"
                        android:textSize="18dp"
                        android:textColor="@color/main_black"/>

                    <TextView
                        android:id="@+id/SEAT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TUMBAL"
                        android:textSize="24dp"
                        android:textColor="@color/main_black"
                        android:fontFamily="sans-serif-medium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Harga"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif"
                        android:textSize="18dp"
                        android:textColor="@color/main_black"/>

                    <TextView
                        android:id="@+id/PRICE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TUMBAL"
                        android:textSize="24dp"
                        android:textColor="@color/main_black"
                        android:fontFamily="sans-serif-medium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Payments"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif"
                        android:textSize="18dp"
                        android:textColor="@color/main_black"/>

                    <TextView
                        android:id="@+id/PAYMENT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TUMBAL"
                        android:textSize="24dp"
                        android:textColor="@color/main_black"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="40dp"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/border_text"
                android:layout_marginHorizontal="35dp"
                android:text="Confirm and Pay"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="18dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>